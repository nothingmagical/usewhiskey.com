source 'https://rubygems.org'

# Latest Ruby
ruby '2.2.2'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'

# Faster ERB
gem 'erubis'

# Use the right host
gem 'rack-canonical-host'

# XML parsing
gem 'nokogiri'

# Markdown
gem 'redcarpet'

# Assets
gem 'sprockets'

# Stylesheet
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'

group :development do
  # Reloading in development
  gem 'shotgun'
end
